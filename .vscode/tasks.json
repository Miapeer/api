{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Development: Build miapeer image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            // "dependsOn": ["Development: Stop miapeer-api container"],
            "command": "docker image build --file ./Dockerfile-dev --tag miapeer.azurecr.io/miapeer-dev .",
            "problemMatcher": []
        },
        {
            "label": "Development: Start miapeer container",
            "type": "shell",
            "command": "docker container run --rm -d -p 8000:80 --env-file ${workspaceFolder}/.env --mount type=bind,source=${workspaceFolder},target=/miapeer --name miapeer-api miapeer.azurecr.io/miapeer-dev",
            // LOCAL: docker container run --rm -p 8000:80 -d --env-file /Users/jep/Workspace/Miapeer/miapeer/.env --mount type=bind,source=/Users/jep/Workspace/Miapeer/miapeer,target=/miapeer --name miapeer-api miapeer.azurecr.io/miapeer-dev
            "problemMatcher": []
        },
        {
            "label": "Development: Shell into miapeer container",
            "type": "shell",
            "command": "docker container run --rm -it -p 8000:80 --env-file ${workspaceFolder}/.env --mount type=bind,source=${workspaceFolder},target=/miapeer --name miapeer-api miapeer.azurecr.io/miapeer-dev bash",
            "problemMatcher": []
        },
        {
            "label": "Development: Stop miapeer container",
            "type": "shell",
            "command": "docker container stop miapeer-api",
            "problemMatcher": []
        },
        {
            "label": "PRODUCTION: Azure ACR login",
            "type": "shell",
            "command": "docker login miapeer.azurecr.io",
            "problemMatcher": []
        },
        {
            "label": "PRODUCTION: Build miapeer image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "docker image build --file ./Dockerfile-prod --tag miapeer.azurecr.io/miapeer .",
            "problemMatcher": []
        },
        {
            "label": "PRODUCTION: Deploy miapeer image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "docker push miapeer.azurecr.io/miapeer",
            "problemMatcher": []
        },
    ]
}
